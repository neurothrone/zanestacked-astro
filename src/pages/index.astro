---
import Counter from "../components/Counter";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="ZaneStacked">
    <div class="flex flex-col items-center text-center py-12">
        <div class="bg-gradient-to-r from-primary-600 to-primary-800 p-1 rounded-full mb-8">
            <div class="bg-dark p-2 rounded-full">
                <div class="text-primary-400 text-4xl font-bold">ZS</div>
            </div>
        </div>
        <h1 class="text-5xl bg-clip-text text-transparent bg-gradient-to-r from-primary-300 to-primary-500 mb-4">Welcome to ZaneStacked</h1>
        <p class="text-gray-300 max-w-2xl mb-8">A futuristic platform for showcasing amazing projects and ideas. Explore the digital universe with our cutting-edge interface.</p>
        <div class="flex gap-4 mb-12">
            <a href="/projects" class="bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 px-6 rounded-md shadow-lg hover:shadow-primary-500/20 transition-all duration-200 no-underline">Explore Projects</a>
            <Counter client:load/>
        </div>
        <div class="w-full max-w-4xl bg-dark-800 border border-dark-700 p-6 rounded-lg">
            <div class="flex items-center justify-between mb-4">
                <h2 class="m-0">Latest Updates</h2>
                <div class="bg-primary-900/50 text-primary-300 text-xs px-2 py-1 rounded-full">BETA</div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="bg-dark-700 p-4 rounded-md border border-dark-600 hover:border-primary-800 transition-all duration-200">
                    <h3 class="text-primary-300 m-0">New Design</h3>
                    <p class="text-gray-400 text-sm">Our platform just got a futuristic makeover with a dark theme and violet accents.</p>
                </div>
                <div class="bg-dark-700 p-4 rounded-md border border-dark-600 hover:border-primary-800 transition-all duration-200">
                    <h3 class="text-primary-300 m-0">Coming Soon</h3>
                    <p class="text-gray-400 text-sm">Stay tuned for exciting new features and projects coming to ZaneStacked.</p>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
